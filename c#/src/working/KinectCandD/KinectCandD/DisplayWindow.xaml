<Window x:Class="KinectCandD.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectCandD"
        mc:Ignorable="d"
        Title="DisplayWindow" Height="300" Width="300">
    <Grid Name="DisplayWindowGrid" x:FieldModifier="public">
        <Viewbox>
            <Image Name="display" Stretch="UniformToFill" x:FieldModifier="public"/>
        </Viewbox>
    </Grid>
</Window>
